(bordering d2 g3)
(bordering g3 f1)
(bordering f1 e2)
(bordering e2 b3) 

(<= (neighbors ?a ?b)
    (bordering ?a ?b))
(<= (neighbors ?a ?b)
    (bordering ?b ?a))

(<= (cellFilled ?x)
    (role ?p)
    (value ?v)
    (true (piece ?p ?v ?x)))

(<= (empty ?x)
    (cell ?x)
    (not (cellFilled ?x)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Control alternating, step counter
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(init (control light))
(<= (next (control light))
    (true (control dark)))
(<= (next (control dark))
    (true (control light)))
(<= (legal ?p noop)
    (role ?p)
    (not (true (control ?p))))
    
(init (step 0))
(<= (next (step ?xn))
    (succ ?x ?xn)
    (true (step ?x)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Board setup phase
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(validInitialLocation light a)
(validInitialLocation light a1)
(validInitialLocation light a2)
(validInitialLocation light a3)
(validInitialLocation light c)
(validInitialLocation dark h)
(validInitialLocation dark h1)
(validInitialLocation dark h2)
(validInitialLocation dark h3)
(validInitialLocation dark f)

(<= (onBoard ?p ?v)
	(cell ?x)	
    (true (piece ?p ?v ?x)))

(<= (legal ?p (place ?v ?x))
	(cell ?x)
	(validInitialLocation ?p ?x)
    (empty ?x)
    (value ?v)
    (not (onBoard ?p ?v))
    (true (control ?p))
    (true (phase setup)))

(<= (next (piece ?p ?v ?x))
    (does ?p (place ?v ?x)))

(init (phase setup))
(<= (next (phase setup))
    (or (true (step 0))
        (true (step 1))
        (true (step 2))
        (true (step 3))
        (true (step 4))
        (true (step 5))
        (true (step 6))
        (true (step 7))
        (true (step 8))))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Gameplay (legal moves)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (legal ?p (move ?v ?xn))
    (true (piece ?p ?v ?x))
    (not (true (phase setup)))
    (value ?v)
    (cell ?xn)
    (true (control ?p))    
    (canMoveTo ?p ?xn)
    (canGoBetween ?v ?x ?xn))

(<= (canMoveTo ?p ?xn)
    (role ?p)
    (empty ?xn))
    
(<= (canMoveTo ?p ?xn)
    (opponent ?p ?op)
    (value ?v)
    (true (piece ?op ?v ?xn)))

(<= (canGoBetween 1 ?x ?xn)
    (neighbors ?x ?xn))
    
(<= (canGoBetween 2 ?x ?xn)
    (cell ?a)
    (empty ?a)
    (neighbors ?x ?a)
    (neighbors ?a ?xn)
    (distinct ?x ?xn))
    
(<= (canGoBetween 3 ?x ?xn)
    (cell ?a)    
    (empty ?a)
    (neighbors ?x ?a)
    (distinct ?x ?b)
    (cell ?b)
    (empty ?b)    
    (neighbors ?a ?b)
    (neighbors ?b ?xn)    
    (distinct ?x ?xn)
    (distinct ?a ?xn))
    
(<= (canGoBetween 123 ?x ?xn)
    (or (canGoBetween 1 ?x ?xn)
        (canGoBetween 2 ?x ?xn)
        (canGoBetween 3 ?x ?xn)))
        
(<= (canGoBetween 4 ?x ?xn)
    (cell ?a)
    (empty ?a)
    (neighbors ?x ?a)
    (neighbors ?a ?b)
    (distinct ?x ?b)
    (cell ?b)
    (empty ?b)
    (neighbors ?b ?c)
    (distinct ?x ?c)
    (distinct ?a ?c)
    (cell ?c)
    (empty ?c)
    (neighbors ?c ?xn)
    (distinct ?x ?xn)
    (distinct ?a ?xn)
    (distinct ?b ?xn))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Gameplay (next state, captures)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (shouldDisappear ?p ?v ?x)
    (role ?p)
    (value ?v)
    (cell ?x)
    (opponent ?p ?p2)
    (value ?v2)
    (cell ?x2)
    (or (does ?p2 (move ?v2 ?x))
        (does ?p (move ?v ?x2))))   

(<= (next (piece ?p ?v ?x))
    (true (piece ?p ?v ?x))
    (opponent ?p ?p2)
    (value ?v2)
    (cell ?x2)
    (not (shouldDisappear ?p ?v ?x)))

(<= (next (piece ?p ?v ?x))
    (does ?p (move ?v ?x)))

; ---

(<= (hasFirstCapture ?p)
    (value ?v)
    (true (firstCapture ?p ?v)))

(<= (next (firstCapture ?p ?v))
    (role ?p)
    (not (hasFirstCapture ?p))
    (cell ?x)
    (opponent ?p ?p2)
    (does ?p (move ?v2 ?x))
    (true (piece ?p2 ?v ?x)))

(<= (next (firstCapture ?p ?v))
    (true (firstCapture ?p ?v)))

; ---

(<= (next (lastCapture ?p ?v))
    (cell ?x)
    (value ?v2)
    (opponent ?p ?p2)
    (does ?p (move ?v2 ?x))
    (true (piece ?p2 ?v ?x)))

(<= (justCaptured ?p)
    (cell ?x)
    (value ?v2)
    (opponent ?p ?p2)
    (does ?p (move ?v2 ?x))
    (true (piece ?p2 ?v ?x)))    

(<= (next (lastCapture ?p ?v))
    (true (lastCapture ?p ?v))
    (not (justCaptured ?p)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; Gameplay (goals, terminal)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (hasLegalMove ?player)
    (legal ?player (move ?v ?x)))

(<= (hasLegalMove ?player)
    (legal ?player (place ?v ?x)))

(<= (hasLegalMove ?player)
    (legal ?player noop))

(<= (victory ?p)
    (role ?p)
    (opponent ?p ?q)
    (not (hasLegalMove ?q)))

(<= (victory ?p)
    (role ?p)
    (value ?v1)
    (value ?v2)
    (true (firstCapture ?p ?v1))
    (true (lastCapture ?p ?v2))
    (victoryCondition ?v1 ?v2))
    
(<= (victoryCondition ?a ?b)
    (victoryPair ?a ?b))
(<= (victoryCondition ?a ?b)
    (victoryPair ?b ?a))
    
(victoryPair 1 3)
(victoryPair 4 4)
(victoryPair 1 123)
(victoryPair 2 123)
(victoryPair 3 123)

(<= terminal
    (role ?p)
    (victory ?p))
    
(<= (goal ?p 0)
    (role ?p)
    (opponent ?p ?p2)
    (victory ?p2))
    
(<= (goal ?p 100)
    (role ?p)
    (victory ?p))

(<= terminal
    (true (step 100)))

(<= (goal ?p 50)
    (role ?p)
    (opponent ?p ?p2)
    (not (victory ?p))
    (not (victory ?p2)))

