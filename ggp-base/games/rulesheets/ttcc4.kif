	(plus1 ?x1 ?x2)
	(plus1 ?y2 ?y1))

(<= (controls ?x ?y ?role)
    (true (cell ?x ?y ?piece))
    (piece ?piece ?ignore ?role))
    
(<= (onBoard ?x ?y)
	(cell ?x ?y)
	(distinct ?x 1)
	(distinct ?x 7)
	(distinct ?y 1)
	(distinct ?y 7))

(<= (cell ?x ?y)
	(index ?x)
	(index ?y))

(<= (distinctCell ?x1 ?y1 ?x2 ?y2)
	(cell ?x1 ?y1)
	(cell ?x2 ?y2)
	(distinct ?x1 ?x2))
(<= (distinctCell ?x1 ?y1 ?x2 ?y2)
	(cell ?x1 ?y1)
	(cell ?x2 ?y2)
	(distinct ?y1 ?y2))

(<= (emptyCell ?x ?y)
	(cell ?x ?y)
    (not (controls ?x ?y red))
    (not (controls ?x ?y yellow))
    (not (controls ?x ?y blue)))

(<= (line ?player)
	(row ?player))
(<= (line ?player)
	(column ?player))
(<= (line ?player)
	(diag ?player))
	
(<= (row ?player)
	(controls 3 3 ?player)
	(controls 4 3 ?player)
	(controls 5 3 ?player))
