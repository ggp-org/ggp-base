(<= (lowPointFrom ?x ?y3 ?x ?y1)
	(index ?x)
	(plus1 ?y2 ?y3)
	(emptyCell ?x ?y2)
	(lowPointFrom ?x ?y2 ?x ?y1))
	
(<= (orthogonal ?x1 ?y1 ?x2 ?y2)
