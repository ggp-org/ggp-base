;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; GOAL Relations
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (goal pacman ?g)
    (true (collected ?n))
    (scoreMap ?n ?g))

(<= (goal ghosts 0)
    (true (location pacman ?xP ?yP))
    (true (location blinky ?xB ?yB))
    (true (location inky ?xI ?yI))
    (distinctCell ?xP ?yP ?xB ?yB)
    (distinctCell ?xP ?yP ?xI ?yI))
(<= (goal ghosts 100)
    (true (location pacman ?x ?y))
    (true (location blinky ?x ?y)))
(<= (goal ghosts 100)
    (true (location pacman ?x ?y))
    (true (location inky ?x ?y)))

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;; View Definitions
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(<= (legalGhostMove ?ghost ?dir)
    (ghost ?ghost)
    (true (location ?ghost ?x ?y))
    (legalStep ?dir ?x ?y)
    (distinct ?dir nowhere))

(<= (legalStep north ?x ?y)
    (pp ?y ?yNew)
    (cell ?x ?yNew)
    (not (blocked ?x ?y ?x ?yNew)))
(<= (legalStep south ?x ?y)
    (mm ?y ?yNew)
    (cell ?x ?yNew)
    (not (blocked ?x ?y ?x ?yNew)))
(<= (legalStep east ?x ?y)
    (pp ?x ?xNew)
    (cell ?xNew ?y)
    (not (blocked ?x ?y ?xNew ?y)))
(<= (legalStep west ?x ?y)
    (mm ?x ?xNew)
    (cell ?xNew ?y)
    (not (blocked ?x ?y ?xNew ?y)))
(<= (legalStep nowhere ?x ?y)
    (cell ?x ?y))

(<= (nextCell north ?x ?y ?x ?yNew)
    (index ?x)
    (pp ?y ?yNew))
(<= (nextCell south ?x ?y ?x ?yNew)
    (index ?x)
    (mm ?y ?yNew))
(<= (nextCell east ?x ?y ?xNew ?y)
    (index ?y)
    (pp ?x ?xNew))
(<= (nextCell west ?x ?y ?xNew ?y)
    (index ?y)
    (mm ?x ?xNew))
(<= (nextCell nowhere ?x ?y ?x ?y)
    (cell ?x ?y))
    
(<= (blocked ?x ?y1 ?x ?y2)
    (true (blockedNorth ?x ?y1))
    (pp ?y1 ?y2))
(<= (blocked ?x ?y2 ?x ?y1)
    (true (blockedNorth ?x ?y1))
    (pp ?y1 ?y2))
(<= (blocked ?x1 ?y ?x2 ?y)
    (true (blockedEast ?x1 ?y))
    (pp ?x1 ?x2))
(<= (blocked ?x2 ?y ?x1 ?y)
    (true (blockedEast ?x1 ?y))
    (pp ?x1 ?x2))

(<= (distinctCell ?x1 ?y1 ?x2 ?y2)
    (cell ?x1 ?y1)
	(cell ?x2 ?y2)
    (distinct ?x1 ?x2))
(<= (distinctCell ?x1 ?y1 ?x2 ?y2)
	(cell ?x1 ?y1)
	(cell ?x2 ?y2)
    (distinct ?y1 ?y2))

(<= captured
    (true (location pacman ?x ?y))
    (true (location blinky ?x ?y)))
(<= captured
    (true (location pacman ?x ?y))
    (true (location inky   ?x ?y)))

(<= noPellets
    (true (collected 35)))

(<= timeout
    (true (step 100)))

